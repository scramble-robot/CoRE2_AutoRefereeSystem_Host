<Window x:Class="CoRE2_AutoRefereeSystem_Host.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CoRE2_AutoRefereeSystem_Host"
        mc:Ignorable="d"
        Title="CoRE-2: 2024 HOST"
        Background="#FFFFFBE9"
        Height="1080" 
        Width="1920"
        Loaded="Window_Loaded"
        KeyDown="Window_KeyDown">
    
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="160" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel x:Name="MainStackPanel"
                        Grid.Row="0"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <StackPanel x:Name="LeftStackPanel"
                            Orientation="Horizontal">
                    <StackPanel x:Name="RedTeamMainStackPanel"
                                Orientation="Horizontal"
                                Margin="0,0,0,0">
                        <StackPanel x:Name="RedTeamStatus"
                                    Background="#20FF0000"
                                    Margin="0,0,0,0">
                            <Label Content="STATUS"
                                   FontSize="28"
                                   Foreground="Black"
                                   FontFamily="ROG Fonts"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Left" />
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total damge taken"
                                       FontSize="20"
                                       Foreground="Black"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="10,0,0,0" />
                                <TextBox x:Name="RedDamageTakenTextBlock"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="0000"
                                         FontFamily="DSEG7 Modern"
                                         FontSize="16
                                         "
                                         FontWeight="Bold"
                                         Width="60"
                                         TextAlignment="Center"
                                         Margin="5,5,0,5"
                                         VerticalAlignment="Bottom" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total dafeated"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="10,0,0,0" />
                                <TextBox x:Name="RedDefeatedTextBlock"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="0000"
                                         FontFamily="DSEG7 Modern"
                                         FontSize="16
         "
                                         FontWeight="Bold"
                                         Width="60"
                                         TextAlignment="Center"
                                         Margin="44,5,0,5"
                                         VerticalAlignment="Bottom" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Attack buff"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="10,0,0,0" />
                                <TextBox x:Name="RedAttackBuffTextBlock"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="x1"
                                         FontFamily="ROG Fonts"
                                         FontSize="16"
                                         Width="40"
                                         TextAlignment="Left"
                                         Margin="10,0,10,5"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Bottom" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel x:Name="RedTeamEMStackPanel"
                                    Background="#20FF0000"
                                    Height="160"
                                    Margin="5,0,0,0">
                            <Label Content="ENHANCEMENT"
                                   FontSize="28"
                                   FontFamily="ROG Fonts"
                                   Foreground="Black"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Left" />
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="RedEMSpot1Button"
                                        Content="SPOT 1"
                                        BorderBrush="#FFB7403A"
                                        Background="#FFB7403A"
                                        Click="RedEMSpot1Button_Click"
                                        FontSize="20"
                                        Margin="10,10,0,5"
                                        Height="40" />
                                <Label Content="remaining time"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="5,10,5,5"
                                       VerticalAlignment="Bottom" />
                                <TextBox x:Name="RedAttackbuff1TimeTextBlock"
                                         IsEnabled="False"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="30 sec.."
                                         FontSize="20"
                                         Margin="5,10,10,10"
                                         Width="90"
                                         TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="RedEMSpot3Button"
                                        Content="SPOT 2"
                                        BorderBrush="#FFB7403A"
                                        Background="#FFB7403A"
                                        Click="RedEMSpot3Button_Click"
                                        FontSize="20"
                                        Margin="10,10,0,5"
                                        Height="40" />
                                <Label Content="remaining time"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="5,10,5,5"
                                       VerticalAlignment="Bottom" />
                                <TextBox x:Name="RedAttackbuff3TimeTextBlock"
                                         IsEnabled="False"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="30 sec.."
                                         FontSize="20"
                                         Margin="5,10,10,10"
                                         Width="90"
                                         TextAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:Name="GameFormatStackPanel"
                                Background="#66F5E98B"
                                Height="160"
                                Width="170"
                                Margin="10,0,0,0">
                        <Label Content="FORMAT"
                               FontSize="28
                               "
                               Foreground="Black"
                               FontFamily="ROG Fonts"
                               HorizontalAlignment="Center"
                               Margin="0,10,0,0"
                               VerticalAlignment="Center" />
                        <RadioButton x:Name="PreliminaryRadioButton"
                                     Content="PRELIMINARY"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Background="{DynamicResource PrimaryHueLightBrush}"
                                     Checked="PreliminaryRadioButton_Checked"
                                     Margin="10,3,10,0" />
                        <RadioButton x:Name="SemifinalsRadioButton"
                                     Content="SEMIFINALS"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Background="{DynamicResource PrimaryHueLightBrush}"
                                     Checked="SemifinalsRadioButton_Checked"
                                     Margin="10,0,10,0" />
                        <RadioButton x:Name="FinalsRadioButton"
                                     Content="FINALS"
                                     FontSize="20"
                                     FontWeight="Bold"
                                     Background="{DynamicResource PrimaryHueLightBrush}"
                                     Checked="FinalsRadioButton_Checked"
                                     Margin="10,0,10,5" />
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="CenterStackPanel"
                            Background="#66F5E98B">
                    <StackPanel x:Name="TimerStackPanel">
                        <TextBlock x:Name="TimerLabel"
                                   Text="GAME READY?"
                                   TextWrapping="Wrap"
                                   Foreground="Black"
                                   FontSize="34"
                                   FontFamily="ROG Fonts"
                                   Margin="0,5,0,0"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center" />
                        <TextBlock x:Name="GameCountDown"
                                   Text="05:00"
                                   Foreground="Black"
                                   FontSize="80"
                                   FontFamily="DSEG7 Modern"
                                   HorizontalAlignment="Center"
                                   TextAlignment="Center"
                                   FontWeight="Bold"
                                   Margin="0,10,0,0" />
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="RightStackPanel"
                            Orientation="Horizontal"
                            Height="160">
                    <StackPanel x:Name="GameStackPanel"
                                Background="#66F5E98B"
                                Margin="0,0,0,0"
                                Width="170">
                        <Label Content="GAME"
                               FontSize="28"
                               Foreground="Black"
                               FontFamily="ROG Fonts"
                               Margin="0,10,0,0"
                               HorizontalAlignment="Center" />
                        <Button x:Name="GameStartButton"
                                Content="START"
                                IsEnabled="False"
                                Click="GameStartButton_Click"
                                FontSize="20"
                                Margin="10,15,10,5"
                                HorizontalAlignment="Center" />
                        <Button x:Name="GameResetButton"
                                Content="RESET"
                                IsEnabled="False"
                                Click="GameResetButton_Click"
                                FontSize="20"
                                Margin="10,10,10,5"
                                HorizontalAlignment="Center" />
                    </StackPanel>
                    <StackPanel x:Name="BlueTeamMainStackPanel"
                                Orientation="Horizontal"
                                Margin="0,0,0,0">
                        <StackPanel x:Name="BlueTeamStatus"
                                    Background="#200000FF"
                                    Margin="10,0,0,0">
                            <Label Content="STATUS"
                                   FontSize="28"
                                   Foreground="Black"
                                   FontFamily="ROG Fonts"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Left" />
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total damge taken"
                                       FontSize="20"
                                       Foreground="Black"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="10,0,0,0" />
                                <TextBox x:Name="BlueDamageTakenTextBlock"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="0000"
                                         FontFamily="DSEG7 Modern"
                                         FontSize="16
                                "
                                         FontWeight="Bold"
                                         Width="60"
                                         TextAlignment="Center"
                                         Margin="5,5,0,5"
                                         VerticalAlignment="Bottom" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Total dafeated"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="10,0,0,0" />
                                <TextBox x:Name="BlueDefeatedTextBlock"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="0000"
                                         FontFamily="DSEG7 Modern"
                                         FontSize="16
"
                                         FontWeight="Bold"
                                         Width="60"
                                         TextAlignment="Center"
                                         Margin="44,5,0,5"
                                         VerticalAlignment="Bottom" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Label Content="Attack buff"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="Black"
                                       HorizontalAlignment="Left"
                                       VerticalAlignment="Bottom"
                                       Margin="10,0,0,0" />
                                <TextBox x:Name="BlueAttackBuffTextBlock"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="x1"
                                         FontFamily="ROG Fonts"
                                         FontSize="16"
                                         Width="40"
                                         TextAlignment="Left"
                                         Margin="10,0,10,5"
                                         HorizontalAlignment="Left"
                                         VerticalAlignment="Bottom" />
                            </StackPanel>
                        </StackPanel>
                        <StackPanel x:Name="BlueTeamEMStackPanel"
                                    Background="#200000FF"
                                    Height="160"
                                    Margin="5,0,0,0">
                            <Label Content="ENHANCEMENT"
                                   FontSize="28"
                                   FontFamily="ROG Fonts"
                                   Foreground="Black"
                                   Margin="0,10,0,0"
                                   HorizontalAlignment="Left" />
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="BlueEMSpot1Button"
                                        Content="SPOT 1"
                                        BorderBrush="#FFB7403A"
                                        Background="#FFB7403A"
                                        Click="BlueEMSpot1Button_Click"
                                        FontSize="20"
                                        Margin="10,10,0,5"
                                        Height="40" />
                                <Label Content="remaining time"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="5,10,5,5"
                                       VerticalAlignment="Bottom" />
                                <TextBox x:Name="BlueAttackbuff1TimeTextBlock"
                                         IsEnabled="False"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="30 sec.."
                                         FontSize="20"
                                         Margin="5,10,10,10"
                                         Width="90"
                                         TextAlignment="Center" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="BlueEMSpot3Button"
                                        Content="SPOT 2"
                                        BorderBrush="#FFB7403A"
                                        Background="#FFB7403A"
                                        Click="BlueEMSpot3Button_Click"
                                        FontSize="20"
                                        Margin="10,10,0,5"
                                        Height="40" />
                                <Label Content="remaining time"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="5,10,5,5"
                                       VerticalAlignment="Bottom" />
                                <TextBox x:Name="BlueAttackbuff3TimeTextBlock"
                                         IsEnabled="False"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         d:Text="30 sec.."
                                         FontSize="20"
                                         Margin="5,10,10,10"
                                         Width="90"
                                         TextAlignment="Center" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <StackPanel x:Name="RobotBaseStackPanel"
                        Grid.Row="1"
                        Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <StackPanel x:Name="RedTeamStackPanel"
                            Orientation="Horizontal"
                            Background="#FFFFFBE9">
                    <local:OneRobotCommunicationController x:Name="Red1"
                                                           RobotLabel="Red 1"
                                                           RobotColor="#10FF0000"
                                                           Margin="0,0,10,0" />
                    <local:OneRobotCommunicationController x:Name="Red2"
                                                           RobotLabel="Red 2"
                                                           RobotColor="#10FF0000"
                                                           Margin="0,0,10,0" />
                    <local:OneRobotCommunicationController x:Name="Red3"
                                                           RobotLabel="Red 3"
                                                           RobotColor="#10FF0000"
                                                           Margin="0,0,20,0" />
                </StackPanel>
                <StackPanel x:Name="BlueTeamStackPanel"
                            Orientation="Horizontal"
                            Background="White">
                    <local:OneRobotCommunicationController x:Name="Blue1"
                                                           RobotLabel="Blue 1"
                                                           RobotColor="#100000FF"
                                                           Margin="0,0,10,0" />
                    <local:OneRobotCommunicationController x:Name="Blue2"
                                                           RobotLabel="Blue 2"
                                                           RobotColor="#100000FF"
                                                           Margin="0,0,10,0" />
                    <local:OneRobotCommunicationController x:Name="Blue3"
                                                           RobotLabel="Blue 3"
                                                           RobotColor="#100000FF" />
                </StackPanel>
            </StackPanel>
        </Grid>
       </Grid>
</Window>
