<UserControl x:Class="CoRE2_AutoRefereeSystem_Host.RobotStatusManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CoRE2_AutoRefereeSystem_Host"
             mc:Ignorable="d"
             d:DesignHeight="415"
             d:DesignWidth="300"
             d:Background="White"
             Loaded="UserControl_Loaded"
             IsEnabledChanged="UserControl_IsEnabledChanged">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="{Binding PanelLabel, RelativeSource={RelativeSource AncestorType={x:Type UserControl}}}"
                       FontSize="24"
                       Margin="10,10,5,15"
                       FontWeight="Bold" />
                <ComboBox x:Name="TeamNameComboBox"
                          Margin="5,10,10,20"
                          Width="190"
                          FontSize="18"
                          SelectionChanged="TeamNameComboBox_SelectionChanged" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Content="HP"
                       Margin="10,10,5,10"
                       FontSize="18" />
                <ProgressBar x:Name="HPBar"
                             Height="20"
                             Width="140"
                             Margin="10,10,5,10"
                             Background="#FFE61500"
                             BorderBrush="#FF0B1508"
                             Foreground="#FF51EF1A" />
                <TextBox x:Name="HPTextBox"
                         TextWrapping="Wrap"
                         d:Text="100/100"
                         Margin="10,10,5,10"
                         Width="70"
                         FontSize="18"
                         TextAlignment="Center" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Label Content="Defeated: "
                       FontSize="16"
                       Margin="10,10,0,10" />
                <TextBlock x:Name="DefeatedTextBlock"
                           TextWrapping="Wrap"
                           Text="0"
                           FontSize="18"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,10,10,10" />
                <Label Content="Damage Taken: "
                       FontSize="16"
                       Margin="10,10,0,10" />
                <TextBlock x:Name="DamageTakenTextBlock"
                           TextWrapping="Wrap"
                           Text="0"
                           FontSize="18"
                           Margin="0,10,0,10"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Width="30" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center">
                <Label Content="Time Until Respawn..."
                       FontSize="16"
                       Margin="28,0,5,5" />
                <TextBox x:Name="RespawnTimeTextBlock"
                         IsEnabled="False"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         d:Text="60 sec.."
                         FontSize="16"
                         Margin="5,0,10,5"
                         Width="70"
                         TextAlignment="Center" />
            </StackPanel>
            <Label Content="Robot Log"
                   Margin="10,0,10,0"
                   FontSize="16"
                   FontWeight="Bold" />
            <TextBox x:Name="RobotLogTextBox"
                     TextWrapping="Wrap"
                     d:Text="[0:10:2] Hit"
                     Margin="15,0,15,10"
                     FontSize="12"
                     Height="125"
                     IsReadOnly="True"
                     AcceptsReturn="True"
                     Background="#66FFFFFF" />
            <StackPanel Orientation="Horizontal">
                <Button x:Name="RespawnButton"
                        Content="Respawn"
                        Margin="10,5,5,10"
                        Background="#FF44B73A"
                        BorderBrush="#FF44B73A"
                        Click="RespawnButton_Click" />
                <Button x:Name="DefeatButton"
                        Content="Defeat "
                        Margin="10,5,5,10"
                        BorderBrush="#FFB7403A"
                        Background="#FFB7403A"
                        Click="DefeatButton_Click" />
                <Button x:Name="PunishButton"
                        Content="Punish "
                        Margin="10,5,10,11"
                        Background="#FF3A6FB7"
                        BorderBrush="#FF3A6FB7"
                        Click="PunishButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
